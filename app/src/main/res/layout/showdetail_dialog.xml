<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bgdialog_custom"
    android:padding="40dp"
    android:layout_gravity="center"
    android:id="@+id/layoutShowContain"
    >

    <ImageView
        android:id="@+id/imshowdetail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/brown"
        app:layout_constraintEnd_toEndOf="@+id/infodialog"
        app:layout_constraintStart_toStartOf="@+id/infodialog"
        app:layout_constraintTop_toTopOf="@id/textdetail" />

    <TextView
        android:id="@+id/textdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:text="@string/brown"
        android:fontFamily="@font/bold"
        android:textSize="25dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toTopOf="@id/imshowdetail"
        app:layout_constraintEnd_toEndOf="@+id/imshowdetail"
        app:layout_constraintStart_toStartOf="@+id/imshowdetail"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:fontFamily="@font/bold"
        android:padding="15dp"
        android:textSize="35dp"
        android:scrollbars="vertical"
        tools:text="@string/brown"
        app:layout_constraintTop_toBottomOf="@+id/imshowdetail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>