    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideBook.Shades"
    android:orientation="vertical"
    android:background="@drawable/homescreen"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCol1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="onClick"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/color1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/numstep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/imStep1"
                    android:layout_toRightOf="@id/imStep1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="brown poop"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imStep1"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    app:srcCompat="@drawable/brown"
                    tools:ignore="VectorDrawableCompat" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

